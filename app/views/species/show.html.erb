<h1>Specie</h1>
<h2><%= @specie.name %></h2>
<% if @specie.image.present? %>
  <%= image_tag(@specie.image.url, :alt => @specie.name, :width => 300) %>
<% end %>
<h5>Type</h5>
<p><%= @specie.specie_type %></p>

<div class = "container">
  <div class="row">
        <div class="card mb-3 bg-primary">
          <% if @target.name.length != 0 %>
            <h5 class="card-header text-white"><%=@target.name%></h5>
          <% else %>
            <h5 class="card-header  text-white">Generic <%=@target.specie.name%></h5>
          <% end %>
          <div class="card-body">
            <h6 class="card-subtitle text-muted"><%=@target.specie.name%></h6>
          </div>
          <% if @target.image.present? %>
            <%= image_tag(@target.image.url, :alt => @target.name, :height => 500) %>
          <% elsif @target.specie.image.present? %>
            <%= image_tag(@target.specie.image.url, :alt => target.specie.name, :height => 500) %>
          <% end %>
          <div class="card-body text-white">
            <p class="card-text"><%= @target.description %></p>
          </div>
          <div class="card-footer text-muted">
            Last Updated: <%= @target.updated_at %>
          </div>
        </div>
  </div>
</div>


<button type="button" class="btn btn-link"><%= link_to 'Back', url_for(:back) %></button>
