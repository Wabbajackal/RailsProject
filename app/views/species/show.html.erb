<h1>Specie</h1>

<div class = "container">
  <div class="row">
        <div class="card mb-3 bg-primary">
          <h5 class="card-header text-white"><%=@specie.name%></h5>
          <div class="card-body">
            <h6 class="card-subtitle text-muted"><%=@specie.specie_type%></h6>
          </div>
          <% if @specie.image.present? %>
            <%= image_tag(@specie.image.url, :alt => @specie.name, :height => 500) %>
          <% end %>
          <div class="card-footer text-muted">
            Last Updated: <%= @specie.updated_at %>
          </div>
        </div>
  </div>
</div>


<button type="button" class="btn btn-link"><%= link_to 'Back', url_for(:back) %></button>
